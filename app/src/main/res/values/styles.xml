<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#007328</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">100px</item>
        <item name="iconSize">30dp</item>
    </style>

    <style name="OutlinedGreenButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">5px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">100px</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="iconSize">30dp</item>
    </style>

</resources>