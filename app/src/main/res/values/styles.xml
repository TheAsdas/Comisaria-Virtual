<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="materialButtonOutlinedStyle">@style/OutlinedGreenButton</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#007328</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">100dp</item>
        <item name="iconSize">30dp</item>
    </style>

    <style name="OutlinedGreenButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="iconSize">30dp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="FloatingButtonStyle">
        <item name="tint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ExtendedFloatingButtonStyle"
        parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="tint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="NameTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RutTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SmallTitle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SmallSubtitle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InfoTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoText">
        <item name="android:textColor">@color/colorGray</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EndText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomSearchView" parent="android:Theme.Holo">
        <item name="searchIcon">@drawable/ic_small_search</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="editTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/colorWhite</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>

    </style>


</resources>